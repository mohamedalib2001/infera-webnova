# INFERA WebNova - Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values

# Hetzner Cloud API Token (required)
# Get from: https://console.hetzner.cloud/projects/{project}/security/tokens
hcloud_token = "your-hetzner-api-token-here"

# Environment (development, staging, production)
environment = "production"

# Hetzner datacenter region
# Options: fsn1 (Falkenstein), nbg1 (Nuremberg), hel1 (Helsinki), ash (Ashburn), hil (Hillsboro)
region = "fsn1"

# Server type for k3s nodes
# Options: cx21 (2vCPU/4GB), cx31 (2vCPU/8GB), cx41 (4vCPU/16GB), cx51 (8vCPU/32GB)
server_type = "cx21"

# Number of master nodes (1 for single-master, 3 for HA)
master_count = 1

# Number of worker nodes
worker_count = 2

# SSH public key for server access
ssh_public_key = "ssh-rsa AAAAB... your-key-here"

# Base domain for the platform
domain = "infera.app"
