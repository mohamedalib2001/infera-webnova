# INFERA WebNova - Ansible Inventory Example
# Copy this file to hosts.yml and fill in your server IPs

all:
  vars:
    ansible_user: root
    ansible_ssh_private_key_file: ~/.ssh/infera_key
    environment: production
    
  children:
    masters:
      hosts:
        master-1:
          ansible_host: 1.2.3.4  # Replace with actual master IP
          k3s_first_master: true
          
    workers:
      hosts:
        worker-1:
          ansible_host: 1.2.3.5  # Replace with actual worker IP
        worker-2:
          ansible_host: 1.2.3.6  # Replace with actual worker IP

    k3s_cluster:
      children:
        masters:
        workers:
